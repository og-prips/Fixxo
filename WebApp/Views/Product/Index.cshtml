@model ProductModel

@{
    ViewData["CollectionTitle"] = "Related products";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <partial name="~/Views/Shared/Partials/Components/_StarRating.cshtml" model="Model.Rating" />
            <p class="lead">$@Model.Price.ToString("0.00")</p>
            <p>@Model.Description</p>
            <div class="form-group row">
                <label for="size-select" class="col-sm-2 col-form-label">Size: </label>
                <div class="col-sm-10 ">
                    <button class="btn btn-outline-secondary mr-2">S</button>
                    <button class="btn btn-outline-secondary mr-2">M</button>
                    <button class="btn btn-outline-secondary mr-2">L</button>
                    <button class="btn btn-outline-secondary mr-2">XL</button>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label for="color" class="col-sm-2 col-form-label">Color:</label>
                <div class="col-sm-10">
                    <select class="form-control" id="color">
                        <option>Red</option>
                        <option>Blue</option>
                        <option>Green</option>
                        <option>Black</option>
                        <option>White</option>
                    </select>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label for="quantity" class="col-sm-2 col-form-label">Qty:</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <button class="btn btn-light" type="button" id="button-minus">-</button>
                        <input type="text" class="form-control" id="quantity" value="1">
                        <button class="btn btn-light me-5" type="button" id="button-plus">+</button>
                        <button class="btn-theme ms-5">ADD TO CART</button>

                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="container mb-4">
                    <label for="quantity" class="col-sm-2 col-form-label">Share:</label>
                    <i class="fa-brands fa-facebook-f me-3 fa-lg"></i>
                    <i class="fa-brands fa-instagram me-3 fa-lg"></i>
                    <i class="fa-brands fa-twitter me-3 fa-lg"></i>
                    <i class="fa-brands fa-google me-3 fa-lg"></i>
                    <i class="fa-brands fa-linkedin me-3 fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
    <div>
        <h3>Reviews</h3>
        <div class="review-list">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Diane</h5>
                    <p class="card-text"><small class="text-muted">26th Jan 2021</small></p>
                    <div class="star-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p class="card-text">Love these, I have them in several colours, really comfortable, you need to go at least one size smaller.</p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Anonymous</h5>
                    <p class="card-text"><small class="text-muted">25th Jan 2021</small></p>
                    <div class="star-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                        <i class="fa fa-star-o"></i>
                        <i class="fa fa-star-o"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p class="card-text">Does not look like the picture</p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Anonymous</h5>
                    <p class="card-text"><small class="text-muted">23rd Jan 2021</small></p>
                    <div class="star-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p class="card-text">I purchased the wrong size, otherwise not too bad</p>
                </div>
            </div>
        </div>
    </div>
    <partial name="~/Views/Shared/Partials/_RelatedCollection.cshtml" />
</div>
